{
  "name": "markmap-standalone",
  "version": "1.0.0",
  "description": "Standalone markmap executable",
  "main": "markmap-wrapper.js",
  "type": "commonjs",
  "bin": {
    "markmap-standalone": "./markmap-wrapper.js"
  },
  "dependencies": {
    "markmap-cli": "^0.16.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.0"
  },
  "scripts": {
    "bundle": "node create-bundle.js",
    "build": "npm run bundle && pkg . --targets node18-win-x64 --output markmap-standalone.exe"
  },
  "pkg": {
    "assets": [
      "bundled/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  }
}
